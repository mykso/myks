{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: ["config:best-practices", "helpers:pinGitHubActionDigests"],
  packageRules: [
    {
      matchUpdateTypes: ["minor", "patch", "pin", "digest"],
      automerge: true,
    },
  ],
  customManagers: [
    {
      customType: "regex",
      fileMatch: ["^(Docker|Container)file$"],
      matchStrings: [
        "#\\s+renovate:\\s+datasource=(?<datasource>\\S+)\\s+depName=(?<depName>\\S+)\\s+(ARG|ENV)\\s+\\S+=['\"]?(?<currentValue>[^'\"\\s]+)['\"]?",
      ],
    },
    {
      customType: "regex",
      fileMatch: ["(^|/)\\.github/workflows/.+\\.ya?ml$"],
      matchStrings: [
        "#\\s+renovate:\\s+datasource=(?<datasource>\\S+)\\s+depName=(?<depName>\\S+)\\s+\\w+:\\s+(?<currentValue>[^\\s]+)",
      ],
    },
  ],
}
